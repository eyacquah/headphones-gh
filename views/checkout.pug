  body.bg-light
    include _nav
    .container
      main
        .row.g-3
          .col-md-5.col-lg-4.order-md-last
            h4.d-flex.justify-content-between.align-items-center.mb-3
              span.text-muted Your cart
              span.checkoutCartQty.badge.bg-secondary.rounded-pill 3
            ul.checkoutCart.list-group.mb-3
              li.list-group-item.d-flex.justify-content-between.lh-sm
                div
                  h6.my-0 Product name
                  small.text-muted Brief description
                span.text-muted GHS 12
            li.list-group-item.d-flex.justify-content-between
              span Total (GHS)
              strong.orderTotal GHS 20
           
          .col-md-7.col-lg-8
            h4.mb-3 Billing address
            form.checkoutForm.needs-validation(novalidate='')
              .row.g-3
                .col-sm-6
                  label.form-label(for='firstName') First name
                  input#firstName.form-control(type='text' placeholder='' value='' required='')
                  .invalid-feedback
                    | Valid first name is required.
                .col-sm-6
                  label.form-label(for='lastName') Last name
                  input#lastName.form-control(type='text' placeholder='' value='' required='')
                  .invalid-feedback
                    | Valid last name is required.
                .col-12
                  label.form-label(for='email')
                    | Email 
                    span.text-muted (Optional)
                  input#email.form-control(type='email' placeholder='you@example.com')
                  .invalid-feedback
                    | Please enter a valid email address for shipping updates.
                .col-12
                  label.form-label(for='address') Address
                  input#address.form-control(type='text' placeholder='1234 Main St' required='')
                  .invalid-feedback
                    | Please enter your shipping address.
                .col-12
                  label.form-label(for='address2')
                    | Address 2 
                    span.text-muted (Optional)
                  input#address2.form-control(type='text' placeholder='Apartment or suite')
                .col-md-5
                  label.form-label(for='country') Country
                  select#country.form-select(required='')
                    option(value='') Choose...
                    option Ghana
                    option United States
                  .invalid-feedback
                    | Please select a valid country.
                .col-md-4
                  label.form-label(for='state') State
                  select#state.form-select(required='')
                    option(value='') Choose...
                    option Accra
                    option California
                  .invalid-feedback
                    | Please provide a valid state.
                .col-md-3
                  label.form-label(for='zip') Zip
                  input#zip.form-control(type='text' placeholder='')
                  .invalid-feedback
                    | Zip code required.
              hr.my-4
              .form-check
                input#same-address.form-check-input(type='checkbox' value='diff' checked)
                label.form-check-label(for='same-address') Shipping address is the same as my billing address
              .form-check
                input#save-info.form-check-input(type='checkbox' checked)
                label.form-check-label(for='save-info') Save this information for next time
              hr.my-4
              h4.mb-3 Payment
              .my-3
                .form-check
                  input#credit.form-check-input(name='paymentMethod' type='radio' checked='' required='')
                  label.form-check-label(for='credit') Card/ MoMo
                .form-check
                  input#momo.form-check-input(name='paymentMethod' type='radio' required='')
                  label.form-check-label(for='paypal') Cash On Delivery
              hr.my-4
              button.w-100.btn.btn-primary.btn-lg(type='submit') Place Order
    include _footer
